---
import type { PostFrontmatter } from "../types/markdown";
import FeaturedPost from "../components/FeaturedPost.astro";
import Heading from "../components/Heading.astro";
import PostList from "../components/PostList.astro";

interface Props {
  recentPosts: PostFrontmatter[];
  featured: PostFrontmatter;
}

const { recentPosts, featured } = Astro.props;
---

<!-- HTML -->
<section>
  <div>
    <FeaturedPost metadata={featured} />

    <Heading id="posts">Postagens recentes</Heading>

    <div class="posts">
      <PostList posts={recentPosts.splice(0, 4)} />
    </div>
  </div>
</section>

<!-- STYLES - SCSS -->
<style lang="scss">
  div {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .posts {
    margin-top: 2rem;
  }
</style>
