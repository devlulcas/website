---
interface Props {
  href: string;
}

const { href } = Astro.props;
---

<!-- HTML -->
<li>
  <a href={href}><slot /></a>
</li>

<!-- STYLES - SCSS -->
<style lang="scss">
  a {
    display: block;
    font-size: clamp(0.9rem, 3vw, 1.1rem);
    padding: 0.5vw 1vw;
    background: var(--on-primary);
    color: var(--primary);
    border-radius: 0.25rem;
    text-decoration: none;
  }
</style>
