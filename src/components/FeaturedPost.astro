---
import type { PostFrontmatter } from "../types/markdown";
import ArrowRightIcon from "./ArrowRightIcon.astro";
interface Props {
  metadata: PostFrontmatter;
}

const { metadata } = Astro.props;
---

<!-- HTML -->
<article>
  <div class="content">
    <div class="upper">
      <h2>Postagem em destaque</h2>

      <h3>{metadata.title} - {metadata.excerpt}</h3>

      <p>
        Publicado em:
        <time datetime={metadata.date}>
          {metadata.date}
        </time>
      </p>
    </div>

    <a href={"/blog/" + metadata.slug}>Leia mais <ArrowRightIcon /></a>
  </div>

  <picture>
    <img src={metadata.thumbnail} alt={metadata.title} />
  </picture>
</article>

<!-- STYLES - SCSS -->
<style lang="scss">
  article {
    width: 100%;
    min-height: 25rem;
    border-radius: 0.5rem;
    padding: 1rem;
    display: flex;
    box-shadow: var(--shadow-smallest);
    position: relative;
    overflow: hidden;
    border: 0.1rem solid rgb(0 0 0 / 5%);
    background: var(--surface);

    &:hover {
      transition: box-shadow 0.2s ease;
      box-shadow: var(--shadow-smallest);
    }

    &::before {
      position: absolute;
      content: "";
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      mix-blend-mode: plus-lighter;
      background-image: radial-gradient(
        circle at 1243.3px 23.5934px,
        var(--secondary-light),
        var(--primary)
      );
    }

    @media screen and (min-width: 90rem) {
      height: 50rem;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 1rem;
    width: 50%;

    @media screen and (min-width: 90rem) {
      padding: 5rem 7.5rem;
    }
  }
  .upper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h2 {
    font-size: clamp(1.2rem, 1.2vw, 1.6rem);
  }

  h3 {
    font-size: clamp(1.4rem, 3vw, 3.5rem);
    font-weight: 500;
    word-wrap: break-word;
  }

  p {
    font-size: clamp(1.1rem, 1.2vw, 1.5rem);
    font-weight: 500;
  }

  a {
    text-decoration: none;
    font-size: clamp(1.2rem, 1.25vw, 1.8rem);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 0.5rem;
    font-weight: 600;
    width: fit-content;
    padding: 1rem;
    padding-left: 3rem;
    border-radius: 0 0.5rem 0.5rem 0;
    transform: translateX(-2.2rem);
    color: var(--on-secondary);
    position: relative;
    overflow: hidden;

    &::before {
      content: "";
      position: absolute;
      width: 300%;
      height: 100%;
      z-index: -1;
      top: 0;
      left: 0;
      transition: transform 500ms ease;
      background: linear-gradient(
        76.35deg,
        var(--secondary-dark) 5%,
        var(--secondary-light) 35%,
        var(--secondary-dark) 95%
      );
    }

    &:hover {
      &::before {
        transform: translateX(-35%);
      }
    }

    @media screen and (min-width: 90rem) {
      padding-left: 8.5rem;
      transform: translateX(-8.7rem);
    }
  }

  picture {
    width: 50%;
    min-height: 25rem;
    height: 100%;
    border-radius: 0.5rem;
    background-color: var(--on-surface);
    position: relative;
  }

  img {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    box-sizing: border-box;
    padding: 0;
    border: none;
    margin: auto;
    display: block;
    min-width: 100%;
    max-width: 100%;
    min-height: 100%;
    max-height: 100%;
    object-fit: contain;
  }
</style>
