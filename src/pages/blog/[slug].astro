---
import Layout from "../../layouts/Layout.astro";
import PostContent from "../../layouts/PostContent.astro";
import type { PostFrontmatter } from "../../types/markdown";

export async function getStaticPaths() {
  const posts = await Astro.glob("../../../posts/**/*.md");

  return posts.map((post) => ({
    params: {
      slug: post.frontmatter.slug,
    },
    props: {
      post,
      metadata: post.frontmatter,
    },
  }));
}

const { Content } = Astro.props.post;
const { date, title, excerpt, slug } = Astro.props.metadata as PostFrontmatter;
const permalink = `${Astro.site.href}${slug}`;
---

<Layout
  seo={{
    title: `DevLulcas - ${title}`,
    description: excerpt,
    image:
      "https://raw.githubusercontent.com/devlulcas/devlulcas.github.io/main/.github/images/logo.png",
    url: permalink,
  }}
>
  <PostContent time={date}>
    <Content />
  </PostContent>
</Layout>
